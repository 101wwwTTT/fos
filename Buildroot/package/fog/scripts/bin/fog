#!/bin/bash
. /usr/share/fog/lib/funcs.sh
if [[ -n $mode && $mode != +(*debug*) ]]; then
    case $mode in
        wipe)
            fog.wipe
            ;;
        checkdisk)
            fog.testdisk
            ;;
        photorec)
            fog.photorec
            ;;
        badblocks)
            fog.surfacetest
            ;;
        clamav)
            fog.av
            ;;
        autoreg)
            fog.auto.reg
            ;;
        manreg)
            fog.man.reg
            ;;
        inventory)
            fog.inventory
            ;;
        capone)
            fog.capone
            ;;
        winpassreset)
            fog.chntpw
            ;;
        quickimage)
            fog.quickimage
            ;;
        sysinfo)
            fog.sysinfo
            ;;
        "donate.full")
            fog.donatefull
            ;;
        *)
            handleError "Fatal Error: Unknown mode :: $mode ($0)\n   Args Passed: $*"
            ;;
    esac
else
    case $type in
        down)
            fog.download
            ;;
        up)
            fog.upload
            ;;
        *)
            [[ -z $type ]] && type="Null"
            handleError "Fatal Error: Unknown request type :: $type"
            ;;
    esac
fi
